{% extends "base.html.twig" %}
{% block title %}Actor{% endblock %}

{% block body %}
     <div class="card">
         <div class="card-title">{{ actor.name }}</div>
         <div class="card-body">
             <p> Liste des séries dans lesquelles cet acteur apparaît</p>
             <ul>
                 {% for program in actor.programs %}
                     <li>
                         <a href="{{ path('program_show', {"id" : program.id}) }}">{{ program.title }}</a>
                     </li>
                 {% endfor %}
             </ul>
         </div>
     </div>
{% endblock %}