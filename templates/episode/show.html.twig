{% extends 'base.html.twig' %}

{% block title %}Episode{% endblock %}

{% block body %}
    <h1>Episode</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ episode.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ episode.title }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ episode.number }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ episode.synopsis }}</td>
            </tr>
            <tr>
                <th>Série</th>
                <td>{{ program.title }}</td>
            </tr>
        </tbody>
    </table>

    {% if app.user %}
        <h4>Commenter la série</h4>
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn">{{ button_label|default('Soumette') }}</button>
        {{ form_end(form) }}
    {% endif %}

    <h4>Commentaires</h4>
    <ul>
    {% for commentaire in episode.comments|sort %}
        <li>Note: {{ commentaire.rate }} || avis: {{ commentaire.comment }}</li>
    {% endfor %}
    </ul>

    <a href="{{ path('episode_index') }}">back to list</a>

    <a href="{{ path('episode_edit', {'slug': episode.slug}) }}">edit</a>

    {{ include('episode/_delete_form.html.twig') }}
{% endblock %}
