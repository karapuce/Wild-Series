{% extends 'base.html.twig' %}

{% block title %}Categories List{% endblock %}

{% block body %}

    <h3>Liste des catégories actuelles</h3>
    <ul>
        {% for category in categories %}
            <li>{{ category.name }}</li>
        {% endfor %}
    </ul>

    <a href="{{ path('category_add') }}">
        Ajouter une catégorie
    </a>
    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}