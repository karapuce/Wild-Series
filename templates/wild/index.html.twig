{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}


    {{ form_start(form) }}
    {{ form_row(form.searchField) }}
    <button type="submit" name="btnSearch">Rechercher une série</button>
    {{ form_end(form) }}
